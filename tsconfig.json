{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "rootDir": "./"
  },
  "include": ["lib/**/*.ts", "bin/**/*.ts"]
}
